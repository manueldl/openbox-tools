# Maintainer: Manuel Domínguez López <mdomlop at gmail dot com>

_pkgver_year=2017
_pkgver_month=03
_pkgver_day=31

_gitname=fortunereader
pkgname=${_gitname}-git
pkgver=41
pkgrel=1
pkgdesc="A simple fortune interface written in python tk."
arch=('any')
url="https://github.com/manueldl/${_gitname}"
source=("git+https://github.com/manueldl/${_gitname}.git")
license=('GPL3')
depends=('python>=3', 'fortune-mod')
makedepends=('git')
optdepends=('fortune-mod-es: Fortune Cookies in Spanish')
conflicts=(${_gitname})

md5sums=('SKIP')

pkgver() {
  cd ${srcdir}/${_gitname}
  git rev-list --count HEAD
}

package() {
    cd "${srcdir}/${_gitname}"
    make PREFIX=${pkgdir}/usr install
}
